<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_8"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="@dimen/padding_8"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/padding_20"
        android:layout_marginBottom="@dimen/padding_8"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerVertical="true"
        tools:text="W2017060040"
        />
    </RelativeLayout>
    <Space
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_4"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Problem :"
      android:textColor="@color/cardview_dark_background"
      android:textSize="18sp"/>
    <TextView
      android:id="@+id/txtProblem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_12"
      android:textColor="@color/cardview_dark_background"
      android:text="Lorem Ipsum"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/cardview_dark_background"
      android:text="Fault Description :"
      android:textSize="18sp"/>
    <TextView
      android:id="@+id/txtFaultDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/padding_12"
      android:textColor="@color/cardview_dark_background"
      android:text="Lorem Ipsum"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Action / Solution"
      android:textColor="@color/cardview_dark_background"
      android:textSize="18sp"/>
    <TextView
      android:id="@+id/txtSolution"
      android:layout_width="match_parent"
      android:layout_marginLeft="@dimen/padding_12"
      android:textColor="@color/cardview_dark_background"
      android:layout_height="wrap_content"
      android:text="Lorem Ipsum"/>
    <TextView
      android:id="@+id/txtPart"
      android:layout_width="wrap_content"
      android:textColor="@color/cardview_light_background"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:textSize="@dimen/padding_20"
      android:textStyle="bold"
      android:layout_gravity="end"
      android:layout_toLeftOf="@+id/imgNotify"
      android:layout_toStartOf="@+id/imgNotify"
      android:padding="@dimen/padding_4"
      android:background="@drawable/bg_rounded_border_black"
      android:backgroundTint="@color/cardview_dark_background"
      android:text="View Part"/>
  </LinearLayout>
</LinearLayout>